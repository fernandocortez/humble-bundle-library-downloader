{
  "name": "Sandbox",
  "image": "mcr.microsoft.com/devcontainers/java",

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21.0.9",
      "jdkDistro": "tem",
      "installGradle": true,
      "gradleVersion": "8.14.3"
    },
    "ghcr.io/ebaskoro/devcontainer-features/sdkman:1": {
      "candidate": "quarkus"
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [8080],

  // Installs necessary dependencies and browsers for Playwright
  "onCreateCommand": "gradle installPlaywrightDeps && gradle installPlaywrightBrowsers",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  }
}
